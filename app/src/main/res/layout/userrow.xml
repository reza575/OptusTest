<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="UserBinding">
        <variable
            name="usershow"
            type="com.moeiny.reza.optustest.repository.model.UserShow"/>
        <variable
            name="itemClickListener"
            type="com.moeiny.reza.optustest.utils.CustomClickListener"/>
    </data>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:onClick="@{() -> itemClickListener.cardClicked(usershow)}"
    android:id="@+id/card_photorow_parent"
    android:layout_margin="@dimen/recycler_item_margin"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/blue"
        android:layout_margin="@dimen/view_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_userrow_id"
            android:layout_margin="@dimen/view_margin"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/txt_userrow_id"
                android:textSize="20sp"
                android:text="ID : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:layout_toRightOf="@id/txt_userrow_id"
                android:id="@+id/txt_usersRow_idvalue"
                android:textSize="20sp"
                tools:text="@{usershow.id}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_userrow_name"
            android:layout_margin="@dimen/view_margin"
            android:layout_below="@id/rl_userrow_id"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/txt_userrow_name"
                android:textSize="20sp"
                android:text="Name : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:layout_toRightOf="@id/txt_userrow_name"
                android:id="@+id/txt_usersRow_namevalue"
                android:textSize="20sp"
                tools:text="@{usershow.name}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_userrow_email"
            android:layout_margin="@dimen/view_margin"
            android:layout_below="@id/rl_userrow_name"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/txt_userrow_email"
                android:textSize="20sp"
                android:text="Email : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:layout_toRightOf="@id/txt_userrow_email"
                android:id="@+id/txt_usersRow_emailvalue"
                android:textSize="20sp"
                tools:text="@{usershow.email}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_userrow_phone"
            android:layout_margin="@dimen/view_margin"
            android:layout_below="@id/rl_userrow_email"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/txt_userrow_phone"
                android:textSize="20sp"
                android:text="Phone : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:layout_toRightOf="@id/txt_userrow_phone"
                android:id="@+id/txt_usersRow_phonevalue"
                android:textSize="20sp"
                tools:text="@{usershow.phone}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

</layout>